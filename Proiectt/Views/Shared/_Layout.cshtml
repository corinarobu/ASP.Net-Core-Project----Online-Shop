<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our online shop -- WAMAZON</title>
    <link rel="icon" type="images/x-icon" href="~/images/logo/1.png" sizes="32x32" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect.styles.css" asp-append-version="true" />
    <style>
        .nav-item{
            margin-left:0.3rem;
            margin-right:0.3rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        
                        
                       <li class="nav-item">
                            <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Index">Afisare produse</a>
                       </li>

                        
                        
                        @if (User.IsInRole("Editor") || User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item" >
                                <a class="   btn btn-outline-info" asp-area="" asp-controller="Orders" asp-action="Index"><i class="bi bi-box-seam"></i>Comenzi</a>
                            </li>
                        
                            <li class="nav-item">
                                <a  class="btn btn-outline-warning" asp-area="" asp-controller="Orders" asp-action="MyCart"><i class="bi bi-cart"></i> Cosul Meu</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            

                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-area="" asp-controller="Categories" asp-action="Index">Afisare categorii</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-area="" asp-controller="Products" asp-action="Pending">Validare produs</a>
                            </li>


                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-area="" asp-controller="Users" asp-action="Index">Afisare utilizatori</a>
                            </li>

                            

                        }

                        @if (User.IsInRole("Editor"))
                        {
                            

                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-area="" asp-controller="Products" asp-action="New">Adaugare produs</a>
                            </li>

                            
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Proiect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
