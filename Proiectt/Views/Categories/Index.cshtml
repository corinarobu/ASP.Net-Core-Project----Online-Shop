@{
    ViewBag.Title = "Lista categorii";
}


@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />
<h2 class="text-center display-4 " style=" font-weight: bold; font-size: 2.5rem !important">@ViewBag.Title</h2>
<br />


<div class="row">

    <div class="d-flex align-items-center justify-content-center">
        <a class="btn btn-secondary" style="max-width: 300px" href="/Categories/New">Adăugare categorie nouă</a>
    </div>

   
    @foreach (var category in ViewBag.Categories)
    {
       
            <div class="col-6 mt-3">
            <div class="card mb-4" style="max-width: 300px">
                <div class="card-body p-3">
                    <h5 class="card-title" style="font-size: 1.4rem !important; color: black;">@category.CategoryName</h5>
                    <div class="d-flex flex-column">
                        <a class="btn btn-success mb-2" style="max-width: 300px" href="/Categories/Show/@category.Id">Afișare</a>
                        <a class="btn btn-success" style="max-width: 300px" href="/Categories/Edit/@category.Id">Editare</a>
                    </div>
                </div>
            </div>
  
        </div>
    }


</div>
